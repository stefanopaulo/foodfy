{% extends "layout.njk" %}

{% block title%}
    <title>Detalhe - {{info.title}}</title>
{% endblock %}

{% block links %}
    <a href="/about">Sobre</a>
    <a href="/recipes" class="active">Receita</a>
{% endblock %}

{% block content %}
    <section class="detail">
        <div class="img-detail">
            <img src="{{info.image}}" alt="Imagem de {{info.title}}">
        </div>

        <div class="detail-info">
            <h1>{{info.title}}</h1>
            <p>por {{info.author}}</p>
        </div>
    </section>

    <section class="detail-content">
        <div>
            <div class="title">
                <h1>Ingredientes</h1>
                <p class="btn btn-action-ingredients">esconder</p>
            </div>

            <div class="ingredients">
                <ul>
                    {% for ingredient in info.ingredients%}
                        <li>{{ingredient}}</li>
                    {% endfor %}
                </ul>
            </div>
        </div>

        <div>
            <div class="title">
                <h1>Modo de preparo</h1>
                <p class="btn btn-action-preparation">esconder</p>
            </div>

            <div class="preparation">
                <p>{{info.preparation}}</p>
            </div>
        </div>

        <div>
            <div class="title">
                <h1>Informações adicionais</h1>
                <p class="btn btn-action-information">esconder</p>
            </div>

            <div class="information">
                <p>{{info.information}}</p>
            </div>
        </div>
    </section>
{% endblock %}

{% block script %}
    <script src="/scripts.js"></script>
{% endblock %}